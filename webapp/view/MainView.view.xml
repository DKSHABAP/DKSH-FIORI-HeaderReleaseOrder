	<Page showHeader="false" showFooter="false" class="sapUiSizeCompact">
		<content>
			<core:Fragment fragmentName="dksh.connectclient.headerblockorder.view.Fragments.SalesFilterFrag" type="XML"/>
			<OverflowToolbar id="otb1" class="dkshToolbarStyle customTitle">
				<Title text="{i18n>pendingRequests} ({=${MockData>/workBoxDtos}.length})" class="sapUiSmallMarginBegin"/>
				<ToolbarSpacer/>
				<Button icon="sap-icon://sort" type="Transparent" tooltip="{i18n>Sort}" press="onSortPress($event, 'idList', '/panelSort', 'SaleOrder')"/>
				<Button type="Transparent" text="{i18n>ExpandAll}" press="onExpandAll" enabled="{oButtonModel>/expandButtonShow}"/>
				<Button type="Transparent" text="{i18n>CollapseAll}" press="onCollapseAll" enabled="{oButtonModel>/expandButtonShow}"/>
				<SearchField width="30%" id="idHeaderSearch" liveChange="onSearchValueForHeader" search="onSearchValueForHeader" placeholder="{i18n>Search}"></SearchField>
				<Button icon="sap-icon://settings" type="Transparent" tooltip="{i18n>ItemPersonalization}" press="onPressPersonalization"/>
				<Button icon="sap-icon://refresh" type="Emphasized" tooltip="{i18n>Refresh}" press="onPressRefresh"/>
			</OverflowToolbar>
			<List id="idList" growing="true" growingThreshold="10" growingScrollToLoad="false" enableBusyIndicator="true"
				items="{path: 'MockData>/workBoxDtos', templateShareable: true, sorter: {path: 'SaleOrder'} }" noDataText="No pending release found"
				class="sapUiSizeCompact">
				<items>
					<CustomListItem>
						<Panel expandable="true" class="hideContent" expanded="{MockData>expanded}" expand="onExpand">
							<headerToolbar>
								<OverflowToolbar>
									<Label text="{i18n>ApproveBlockSalesOrder}"/>
									<Label text="{MockData>SaleOrder}" design="Bold"/>
									<Label text="{i18n>descSet}"/>
									<Label text="{MockData>DescSet}" design="Bold"/>
									<Label text="{i18n>level}"/>
									<Label text="{MockData>Level}" design="Bold"/>
									<ToolbarSpacer/>
									<Button icon="sap-icon://accept" type="Accept" tooltip="{i18n>Approve}" press="onHeaderApprovePress" class="dkshAcceptBtnStyle"
										enabled="true"/>
								</OverflowToolbar>
							</headerToolbar>
							<content><core:Fragment fragmentName="dksh.connectclient.headerblockorder.view.Fragments.SaleDocDetail" type="XML"/></content>
						</Panel>
					</CustomListItem>
				</items>
			</List>
		</content>
	</Page>
